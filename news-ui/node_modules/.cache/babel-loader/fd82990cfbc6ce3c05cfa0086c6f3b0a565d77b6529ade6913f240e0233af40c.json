\n.news-card:hover {\r\n  background-color: #f0f0f0;\r\n}\r\n\r\nheader {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  overflow: hidden;\r\n\r\n  img {\r\n    max-width: 100%;\r\n    height: auto;\r\n  }\r\n\r\n  i {\r\n    font-size: 2rem;\r\n  }\r\n}\r\n\r\n.content h2 {\r\n  font-size: 1.2rem;\r\n  margin-top: 10px;\r\n}\r\n\r\n.content p {\r\n  margin-top: 10px;\r\n}\r\n\r\n.footer {\r\n  display: flex;\r\n  justify-content: flex-end;\r\n}\r\n</style>\r\n  "],"mappings":"AAqBA,eAAe;EACbA,IAAI,EAAE,gBAAgB;EACtBC,KAAK,EAAE;IACLC,OAAO,EAAEC,MAAM;IAAE;IACjBC,QAAQ,EAAEC;EACZ,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,eAAe,EAAE,CAAC,EAAE;IACtB,CAAC;EACH,CAAC;;EACDC,OAAO,EAAE;IACPC,eAAeA,CAACP,OAAO,EAAE;MACvB,IAAIA,OAAO,EAAE;QACX;QACA,IAAI,CAACA,OAAO,CAACQ,KAAI,IAAKR,OAAO,CAACQ,KAAK,CAACC,IAAI,CAAC,MAAM,EAAE,EAAE;UACjD;UACA,IAAI,CAAC,IAAI,CAACJ,eAAe,CAAC,IAAI,CAACH,QAAQ,CAAC,EAAE;YACxC;YACA,MAAMQ,WAAU,GAAI,CAAC,EAAE;YACvB,IAAI,CAACL,eAAe,CAAC,IAAI,CAACH,QAAQ,IAAI,IAAI;YAC1C;YACA,MAAMM,KAAI,GAAK,IAAG,IAAI,CAACN,QAAS,IAAGQ,WAAY,MAAK;YACpD;YACAC,OAAO,CAACC,GAAG,CAAC,SAAS,EAAEJ,KAAK,CAAC;YAC7B,OAAOA,KAAK;UACd;QACF;QACA,OAAOR,OAAO,CAACQ,KAAK;MACtB;MACA,OAAOR,OAAO;IAChB,CAAC;IACDa,WAAWA,CAACC,GAAG,EAAE;MACfC,MAAM,CAACC,IAAI,CAACF,GAAG,CAAC;IAClB;EACF;AACF,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}